@page
@model MoonriseMovies.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile";
}
<style>
    .form-control {
        color: black;
    }
</style>
<br>
<h1>@ViewData["Title"] for <i><b>@User.Identity.Name</b></i></h1>


<br>
<div class="row">
    
<div class="container">
    <div class="col bg-dark rounded p-4 m-4">
        <h2>Movie History</h2>
        <table class="table">
            <thead title="Movie History">
                <tr>
                    <th scope="col">Screening ID</th>
                    <th scope="col">Screen</th>
                    <th scope="col">Title</th>
                    <th scope="col">Purchased At</th>
                    <th scope="col">Price</th>
                    <th scope="col">Ticket Code</th>
                    <th scope="col">Movie Info</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.ticketList)
                {
                    <tr>
                        <td>@ticket.Screening.Id</td>
                        <td>@ticket.Screening.Code</td>
                        <td>@ticket.Screening.Movie.Title</td>
                        <td>@ticket.PurchasedAt</td>
                        <td>@ticket.Screening.Price.00$</td>
                        <td>@ticket.PaymentCode</td>
                        <td><a class="adminLinks" asp-page="/ViewMovieDetails" asp-route-id="@ticket.Screening.Movie.Id"
                            target="_blank"><button type="submit" class="btn btn-success btn-sm">View Page</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-6 col-md-4 bg-dark rounded p-4 m-4">
        <h4>Time to change passwords?</h4>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.CurrentPassword" class="form-label"></label>
                <input asp-for="Input.CurrentPassword" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <input asp-for="Input.NewPassword" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-danger btn-lg">Change Password</button>
            </div>
        </form>
    </div>
</div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
