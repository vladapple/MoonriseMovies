@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
<div id="featuredmovie" style="background-image: url(@ViewData["imageDataURL"])">
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold">Playing This Week</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">@Model.FeaturedMovie.Title</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Book Now</button>
                <button type="button" class="btn btn-outline-secondary btn-lg px-4">More Movies</button>
            </div>
        </div>
    </div>
</div>
<div id="moviepricing">
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold">Admission</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">One ticket is valid for up to 2 movies on the same screen and night.<br>Adult tickets
                are 20$ each.<br>Childen under the age of 10 get in for FREE.<br>Skip the line by ordering your ticket
                online!</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <button type="button" class="btn btn-primary btn-lg px-4 gap-3">Create an Account</button>
                <button type="button" class="btn btn-outline-secondary btn-lg px-4">Login</button>
            </div>
        </div>
    </div>
</div>
<div class="px-4 py-5 my-5 text-center">
    <h3 class="display-5 fw-bold">Check out what's playing this Week</h3>
</div>

<div class="container text-center">
    <div class="row">
        <div class="col">
            <button type="button" id="day" class="btn btn-danger btn-lg">Friday</button>
        </div>
        <div class="col">
            <button type="button" id="day" class="btn btn-danger btn-lg">Saturday</button>
        </div>
        <div class="col">
            <button type="button" id="day" class="btn btn-danger btn-lg">Sunday</button>
        </div>
        <div class="row"><br></div>
        <div class="row">
            <!--Friday START-->
            <div class="col">
                <!--Start- Here we can place a small screening schedule-->
                <div class="container">
                    <div class="list-group w-auto">
                        <!--For Each Statement goes here-->
                        @foreach (var s in Model.Friday)
                        {
                            <a asp-page="/ViewMovieDetails" asp-route-id="@s.Movie.Id"
                            class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-dark text-light"
                            aria-current="true">
                                <button type="button" class="btn btn-warning text-light"><i
                                    class="bi bi-film"></i>Details</button>
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <div class="container">
                                        <h6 class="mb-0">@s.Movie.Title</h6>
                                        <p class="mb-0 opacity-75">@s.Start.Hour:00 PM</p>
                                        <p class="mb-0 opacity-75">Screen @s.Code</p>

                                    </div>
                                    <small class="opacity-50 text-nowrap">@s.Movie.DurationMin min</small>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
            <!--Friday End-->
            <!--Saturday Start-->
            <div class="col">
                <!--Start- Here we can place a small screening schedule-->
                <div class="container">
                    <div class="list-group w-auto">
                        <!--For Each Statement goes here-->
                        @foreach (var s in Model.Saturday)
                        {
                            <a asp-page="/ViewMovieDetails" asp-route-id="@s.Movie.Id"
                            class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-dark text-light"
                            aria-current="true">
                                <button type="button" class="btn btn-warning text-light"><i
                                    class="bi bi-film"></i>Details</button>
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <div class="container">
                                        <h6 class="mb-0">@s.Movie.Title</h6>
                                        <p class="mb-0 opacity-75">@s.Start.Hour:00 PM</p>
                                        <p class="mb-0 opacity-75">Screen @s.Code</p>

                                    </div>
                                    <small class="opacity-50 text-nowrap">@s.Movie.DurationMin min</small>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
            <!--Saturday End-->
            <!--Sunday Start-->
            <div class="col">
                <!--Start- Here we can place a small screening schedule-->
                <div class="container">
                    <div class="list-group w-auto">
                        <!--For Each Statement goes here-->
                        @foreach (var s in Model.Sunday)
                        {
                            <a asp-page="/ViewMovieDetails" asp-route-id="@s.Movie.Id"
                            class="list-group-item list-group-item-action d-flex gap-3 py-3 bg-dark text-light"
                            aria-current="true">
                                <button type="button" class="btn btn-warning text-light"><i
                                    class="bi bi-film"></i>Details</button>
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <div class="container">
                                        <h6 class="mb-0">@s.Movie.Title</h6>
                                        <p class="mb-0 opacity-75">@s.Start.Hour:00 PM</p>
                                        <p class="mb-0 opacity-75">Screen @s.Code</p>

                                    </div>
                                    <small class="opacity-50 text-nowrap">@s.Movie.DurationMin min</small>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
            <!--Sunday End-->
        </div>

    </div>
</div>
