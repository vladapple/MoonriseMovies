@page
@model MoonriseMovies.Pages.Admin.BlobStorageModel
@{
    ViewData["Title"] = "Blob Azure Storage";
}

<br>
<h4>Upload, download, delete from Blob Azure Storage:</h4><br>
<a class="adminLinks" asp-page="../Admin/Index">Back to Dashboard</a><br><br>
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Choose File</label>
                <input type="file" name="files" class="form-control" />
            </div><br>
            <br>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

