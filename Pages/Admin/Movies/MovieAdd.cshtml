@page
@model MoonriseMovies.Pages.Admin.Movies.MovieAddModel
@{
    ViewData["Title"] = "Add movie";
}
<h3>Create new movie:</h3><br>
<a class="adminLinks" asp-page="../../Admin/Movies/Movies">Back to Movies</a><br><br>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" style="color:red; font-size:10px;"></span>
            </div><br>

            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre" class="form-control">
                    <option value="Action">Action</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Drama">Drama</option>
                    <option value="Fantasy">Fantasy</option>
                    <option value="Horror">Horror</option>
                    <option value="Mystery">Mystery</option>
                    <option value="Romance">Romance</option>
                    <option value="Thriller">Thriller</option>
                    <option value="Western">Western</option>
                </select>
                <span asp-validation-for="Genre" style="color:red; font-size:10px;"></span>
            </div><br>

            <div class="form-group">
                <label asp-for="DurationMin" class="control-label"></label>
                <input type="number" asp-for="DurationMin" class="form-control" />
                <span asp-validation-for="DurationMin" style="color:red; font-size:10px;"></span>
            </div><br>

            <div class="form-group">
                <label asp-for="TrailerURL" class="control-label"></label>
                <input asp-for="TrailerURL" class="form-control" />
                <span asp-validation-for="TrailerURL" style="color:red; font-size:10px;"></span>
            </div><br>

            <div class="form-group">
                <label class="control-label">Image</label>
                <input type="file" asp-for="Image" name="file" class="form-control" />
                <span asp-validation-for="Image" style="color:red; font-size:10px;"></span>
            </div><br>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" style="color:red; font-size:10px;"></span>
            </div>
            <br>

            <div class="form-group">
                <input type="submit" value="Add Movie" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

