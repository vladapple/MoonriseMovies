@page "{id:int}"
@model MoonriseMovies.Pages.Admin.Movies.MovieDeleteModel
@{
    ViewData["Title"] = "Delete movie";
}

<h3>Delete the movie:</h3>
<br><br>
<h4>Id: @Model.Movie.Id</h4>
<h4>Title: @Model.Movie.Title</h4>
<br><br>
<p style="color:red">Are you sure you want to delete this record? 
    &nbsp;&nbsp;<button class="btn btn-secondary" onclick="enableDelete()">Yes</button>
    &nbsp;&nbsp;<a class="btn btn-secondary" asp-page="../../Admin/Movies/Movies">Cancel</a>
</p>
<form method="post">
    <button type="submit" id="delete" class="btn btn-danger" disabled>Delete</button>
</form>
 <script>
    function enableDelete()
    {
        document.getElementById("delete").disabled = false;
    }
 </script>


